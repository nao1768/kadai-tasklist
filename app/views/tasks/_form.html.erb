<div class="row">
  <div class="col-xs-8 col-lg-6">
  <div class="col-xs-offset-2 col-lg-offset-3">

<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div class="alert alert-warning">
      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label :status, 'ステータス' %>
    <%= f.text_field :status, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :content, 'タスク' %>
    <%= f.text_field :content, class: 'form-control' %>
  </div>
  
  <%= f.submit '入力', class: 'btn btn-praimary' %>
<% end %>
  </div>
  </div>
</div>
